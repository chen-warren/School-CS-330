@model Fall2025_Project3_wchen60.Models.ViewModels.MovieDetailsViewModel

@{
    ViewData["Title"] = Model.Movie?.Title;
}

<div class="row">
    <div class="col-md-4">
        @if (Model.Movie?.Poster is { Length: > 0 })
        {
            <img src="@Url.Action("GetPoster", "Movies", new { id = Model.Movie.Id })" alt="@Model.Movie.Title" class="img-fluid img-thumbnail" />
        }
        else
        {
            <div class="bg-light p-5 text-center text-muted">
                <p>No poster available</p>
            </div>
        }
    </div>
    <div class="col-md-8">
        <h1>@Model.Movie?.Title (@Model.Movie?.Year)</h1>
        <p><strong>Genre:</strong> @Model.Movie?.Genre</p>
        @if (!string.IsNullOrEmpty(Model.Movie?.ImdbLink))
        {
            <p><a href="@Model.Movie.ImdbLink" target="_blank" class="btn btn-outline-primary">View on IMDB</a></p>
        }
    </div>
</div>

<hr />

<h3>Actors in this Movie</h3>
@if (Model.Actors.Any())
{
    <ul class="list-group mb-4">
        @foreach (var actor in Model.Actors)
        {
            <li class="list-group-item">
                <a asp-controller="Actors" asp-action="Details" asp-route-id="@actor?.Id">@actor?.Name</a>
            </li>
        }
    </ul>
}
else
{
    <p class="text-muted">No actors associated with this movie.</p>
}

<hr />

<h2>AI Generated Reviews and Sentiment Analysis</h2>
@if (Model.Reviews.Any())
{
    <div class="alert alert-info">
        <h4>Average Overall Sentiment: @(Model.AverageSentiment.ToString("0.000"))</h4>
        <p class="mb-0">
            @if (Model.AverageSentiment > 0.05)
            {
                <span class="badge bg-success">Positive</span>
            }
            else if (Model.AverageSentiment < -0.05)
            {
                <span class="badge bg-danger">Negative</span>
            }
            else
            {
                <span class="badge bg-secondary">Neutral</span>
            }
        </p>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th style="width: 70%;">Review</th>
                <th style="width: 30%;">Sentiment Score</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model.Reviews)
            {
                <tr>
                    <td>@review.Review</td>
                    <td>
                        <span class="badge @(review.Sentiment > 0.05 ? "bg-success" : review.Sentiment < -0.05 ? "bg-danger" : "bg-secondary")">
                            @review.Sentiment.ToString("0.000")
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No reviews available.</p>
}

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to Movies</a>
    <a asp-action="Edit" asp-route-id="@Model.Movie?.Id" class="btn btn-primary">Edit Movie</a>
</div>