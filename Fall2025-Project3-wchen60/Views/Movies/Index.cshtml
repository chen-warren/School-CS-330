@model IEnumerable<Fall2025_Project3_wchen60.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<h1>Movies List</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Add New Movie</a>
</p>

<table id="moviesTable" class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Poster</th>
        <th>Title</th>
        <th>IMDB Link</th>
        <th>Year</th>
        <th>Genre</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>
                @if (movie.Poster is { Length: > 0 })
                {
                    <img src="@Url.Action("GetPoster", "Movies", new { id = movie.Id })" alt="@movie.Title" class="img-thumbnail" style="max-height: 100px; max-width: 100px;" />
                }
                else
                {
                    <span class="text-muted">No poster</span>
                }
            </td>
            <td>@movie.Title</td>
            <td>
                @if (!string.IsNullOrEmpty(movie.ImdbLink))
                {
                    <a href="@movie.ImdbLink" target="_blank">IMDB</a>
                }
                else
                {
                    <span class="text-muted">N/A</span>
                }
            </td>
            <td>@movie.Year</td>
            <td>@movie.Genre</td>
            <td>
                <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-info btn-sm">Details</a>
                <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-warning btn-sm">Edit</a>
                <form asp-action="Delete" asp-controller="Movies" asp-route-id="@movie.Id" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger btn-sm"
                            onclick="return confirm('Are you sure you want to delete this movie?');">
                        Delete
                    </button>
                </form>


            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js" integrity="sha512-aZVdJkG8B8bXWj+iKu3Kwz0d0KZlu/cZeQpdQYOuZ8BCrwRdMqOb9/LNxihZ07fEy/uRgqXOTB86Rn11vTHYHA==" crossorigin="anonymous"></script>
    <script>
        $(document).ready(() => $('#moviesTable').DataTable());
    </script>
}