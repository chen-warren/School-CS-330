@model Actor

@{
    ViewData["Title"] = "Edit Actor";
}

<h1>Edit Actor</h1>

<hr />
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    
    <div class="form-group mb-3">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Gender" class="control-label"></label>
        <input asp-for="Gender" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Age" class="control-label"></label>
        <input asp-for="Age" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="ImdbLink" class="control-label"></label>
        <input asp-for="ImdbLink" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label class="control-label">Current Photo</label>
        @if (Model.Photo is { Length: > 0 })
        {
            <div>
                <img src="@Url.Action("GetPhoto", "Actors", new { id = Model.Id })"
                     alt="Actor Photo" class="img-thumbnail" style="max-height: 200px;" />
            </div>
        }
        else
        {
            <p class="text-muted">No photo uploaded</p>
        }
    </div>

    <div class="form-group mb-3">
        <label class="control-label">Upload New Photo Image</label>
        <input type="file" name="photoFile" accept="image/*" class="form-control" />
        <span class="text-muted">Leave empty to keep current photo</span>
    </div>

    <div class="form-group">
        <a href="@Url.Action("Index")" class="btn btn-dark">Done</a>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
