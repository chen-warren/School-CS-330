@model Fall2025_Project3_wchen60.Models.ViewModels.ActorDetailsViewModel

@{
    ViewData["Title"] = Model.Actor?.Name;
}

<div class="row">
    <div class="col-md-4">
        @if (Model.Actor?.Photo is { Length: > 0 })
        {
            <img src="@Url.Action("GetPhoto", "Actors", new { id = Model.Actor.Id })" alt="@Model.Actor.Name" class="img-fluid img-thumbnail" />
        }
        else
        {
            <div class="bg-light p-5 text-center text-muted">
                <p>No photo available</p>
            </div>
        }
    </div>
    <div class="col-md-8">
        <h1>@Model.Actor?.Name</h1>
        <p><strong>Gender:</strong> @Model.Actor?.Gender</p>
        <p><strong>Age:</strong> @Model.Actor?.Age</p>
        @if (!string.IsNullOrEmpty(Model.Actor?.ImdbLink))
        {
            <p><a href="@Model.Actor.ImdbLink" target="_blank" class="btn btn-outline-primary">View on IMDB</a></p>
        }
    </div>
</div>

<hr />

<h3>Movies featuring @Model.Actor?.Name</h3>
@if (Model.Movies.Any())
{
    <ul class="list-group mb-4">
        @foreach (var movie in Model.Movies)
        {
            <li class="list-group-item">
                <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie?.Id">@movie?.Title</a>
                (@movie?.Year)
            </li>
        }
    </ul>
}
else
{
    <p class="text-muted">No movies associated with this actor.</p>
}

<hr />

<h2>AI Generated Tweets and Sentiment Analysis</h2>
@if (Model.Tweets.Any())
{
    <div class="alert alert-info">
        <h4>Overall Sentiment Analysis: @(Model.AverageSentiment.ToString("0.000"))</h4>
        <p class="mb-0">
            @if (Model.AverageSentiment > 0.05)
            {
                <span class="badge bg-success">Positive</span>
            }
            else if (Model.AverageSentiment < -0.05)
            {
                <span class="badge bg-danger">Negative</span>
            }
            else
            {
                <span class="badge bg-secondary">Neutral</span>
            }
        </p>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th style="width: 70%;">Tweet</th>
                <th style="width: 30%;">Sentiment Score</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tweet in Model.Tweets)
            {
                <tr>
                    <td>@tweet.Tweet</td>
                    <td>
                        <span class="badge @(tweet.Sentiment > 0.05 ? "bg-success" : tweet.Sentiment < -0.05 ? "bg-danger" : "bg-secondary")">
                            @tweet.Sentiment.ToString("0.000")
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No tweets available.</p>
}

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to Actors</a>
    <a asp-action="Edit" asp-route-id="@Model.Actor?.Id" class="btn btn-primary">Edit Actor</a>
</div>