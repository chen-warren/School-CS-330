@model IEnumerable<Fall2025_Project3_wchen60.Models.Actor>

@{
    ViewData["Title"] = "Actors";
}

<h1>Actors List</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Add New Actor</a>
</p>

<table id="actorsTable" class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Photo</th>
        <th>Name</th>
        <th>Gender</th>
        <th>Age</th>
        <th>IMDB Link</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var actor in Model)
    {
        <tr>
            <td>
                @if (actor.Photo != null && actor.Photo.Length > 0)
                {
                    <img src="@Url.Action("GetPhoto", "Actors", new { id = actor.Id })" alt="@actor.Name" class="img-thumbnail" style="max-height: 100px; max-width: 100px;" />
                }
                else
                {
                    <span class="text-muted">No photo</span>
                }
            </td>
            <td>@actor.Name</td>
            <td>@actor.Gender</td>
            <td>@actor.Age</td>
            <td>
                @if (!string.IsNullOrEmpty(actor.ImdbLink))
                {
                    <a href="@actor.ImdbLink" target="_blank">IMDB</a>
                }
                else
                {
                    <span class="text-muted">N/A</span>
                }
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@actor.Id" class="btn btn-info btn-sm">Details</a>
                <a asp-action="Edit" asp-route-id="@actor.Id" class="btn btn-warning btn-sm">Edit</a>
                <form asp-action="Delete" asp-controller="Actors" asp-route-id="@actor.Id" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger btn-sm"
                            onclick="return confirm('Are you sure you want to delete this actor?');">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js" integrity="sha512-aZVdJkG8B8bXWj+iKu3Kwz0d0KZlu/cZeQpdQYOuZ8BCrwRdMqOb9/LNxihZ07fEy/uRgqXOTB86Rn11vTHYHA==" crossorigin="anonymous"></script>
    <script>
        $(document).ready(() => $('#actorsTable').DataTable());
    </script>
}